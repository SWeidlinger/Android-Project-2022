<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".ChangeSectionColorActivity">

    <Button
        android:id="@+id/dialog_change_section_color_button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_change_section_color_cardView5" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Change Section Color"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_change_section_color_cardView2"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:checkable="true"
        android:clickable="true"
        app:cardBackgroundColor="#FFFFFF"
        app:checkedIconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/dialog_change_section_color_cardView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/dialog_change_section_color_cardView1"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_change_section_color_cardView4"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:checkable="true"
        android:clickable="true"
        app:cardBackgroundColor="#FFFFFF"
        app:checkedIconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/dialog_change_section_color_cardView6"
        app:layout_constraintEnd_toEndOf="@+id/dialog_change_section_color_cardView2"
        app:layout_constraintStart_toStartOf="@+id/dialog_change_section_color_cardView2"
        app:layout_constraintTop_toBottomOf="@+id/dialog_change_section_color_cardView2">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_change_section_color_cardView5"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:checkable="true"
        android:clickable="true"
        app:cardBackgroundColor="#FFFFFF"
        app:checkedIconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_change_section_color_cardView3"
        app:layout_constraintStart_toStartOf="@+id/dialog_change_section_color_cardView3"
        app:layout_constraintTop_toBottomOf="@+id/dialog_change_section_color_cardView3">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_change_section_color_cardView6"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="80dp"
        android:checkable="true"
        android:clickable="true"
        app:cardBackgroundColor="#FFFFFF"
        app:checkedIcon="@drawable/ic_baseline_check_circle_24"
        app:checkedIconTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/dialog_change_section_color_cardView4"
        app:layout_constraintStart_toStartOf="@+id/dialog_change_section_color_cardView4"
        app:layout_constraintTop_toBottomOf="@+id/dialog_change_section_color_cardView4" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_change_section_color_cardView3"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:checkable="true"
        android:clickable="true"
        app:cardBackgroundColor="#FFFFFF"
        app:checkedIconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/dialog_change_section_color_cardView5"
        app:layout_constraintEnd_toEndOf="@+id/dialog_change_section_color_cardView1"
        app:layout_constraintStart_toStartOf="@+id/dialog_change_section_color_cardView1"
        app:layout_constraintTop_toBottomOf="@+id/dialog_change_section_color_cardView1">

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dialog_change_section_color_cardView1"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="10dp"
        android:checkable="true"
        android:clickable="true"
        app:cardBackgroundColor="#FFFFFF"
        app:checkedIconTint="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@+id/dialog_change_section_color_cardView3"
        app:layout_constraintEnd_toStartOf="@+id/dialog_change_section_color_cardView2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5">

    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>